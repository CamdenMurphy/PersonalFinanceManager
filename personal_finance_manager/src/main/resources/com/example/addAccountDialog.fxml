<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="10" padding="10">
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Balance:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="balanceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="typeBox" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Checking"/>
                <String fx:value="Savings"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Interest Rate (Savings only):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="interestRateField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <ButtonBar buttonOrder="OK_CANCEL" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <buttons>
            <Button text="Create" fx:id="createButton" defaultButton="true"/>
            <Button text="Cancel" fx:id="cancelButton" cancelButton="true"/>
        </buttons>
    </ButtonBar>
</GridPane>
